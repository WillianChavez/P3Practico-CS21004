<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/txtPropietarioId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Propietario" />

    <Button
        android:id="@+id/btnSearchPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Propietario" />

    <Button
        android:id="@+id/btnAddPropietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Propietario" />

    <!-- Agrega aquÃ­ la vista para mostrar los detalles del propietario -->
    <TextView
        android:id="@+id/txtPropietarioDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />
</LinearLayout>